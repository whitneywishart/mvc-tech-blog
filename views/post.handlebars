<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="post-comment">Leave a comment:</label>
      <input class="form-input" type="text" id="post-comment" name="post-comment" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" id="comment-button">Comment</button>
    </div>
  </form>
</div>