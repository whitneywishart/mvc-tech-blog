<div class="dashboard" >
    <h2 class="mb-2">Dashboard</h2>
    <a href="/dashboard/create/"><button id="create-post" class="btn btn-primary">Create post</button></a>
    {{#if posts.length}}

</div>

{{#each posts as |post|}}
{{> post-info post}}

<a href="/dashboard/edit/{{post.id}}"><button class="btn btn-primary edit">Edit or delete post</button></a>
</div>
{{/each}}

{{else}}
<p>The posts you create will appear here.</p>


{{/if}}