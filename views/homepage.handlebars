<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row">
  <div class="col-md-6">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
  </div>
  <span class="col-md-6">
    <p style="text-align:right;">Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </span>
</div>
<div class="row">
  <div class="col-md-12">
    {{post.description}}
    <p>
    </p>
  </div>
</div>


{{/each}}