<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row-container">
  <div class="header-row-container">
    <div class="row">
      <div class="col-md-6">
        <h2>
          <a href="/post/{{post.id}}">{{post.name}}</a>
        </h2>
      </div>
      <div class="col-md-6 text-right">
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
      </div>
    </div>
  </div>

  <div class="row">
    <p class="col-md-12 description-row-container">
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}